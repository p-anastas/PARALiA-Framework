				for inbalance_ctr in 2 8 32 128;
				do
					for MN in {8192..28672..4096}
					do

						K_thin=$((MN/$inbalance_ctr))
						echo "$CoCopelia_run -1 -1 -1 -1 $TransA $TransB $alpha $beta $MN $MN $K_thin $A_loc $B_loc $C_loc $C_loc &>> $perf_log"
